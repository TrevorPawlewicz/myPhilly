<h1>Comments - new.ejs</h1>

<div id="comments-new" class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new comment to <%= bar.name %></h1>

        <div style="width:30%; margin: 30px auto;">
            <form action="/bars/<%= bar._id %>/comments" method="POST">

                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>

            </form>

            <a href="/bars">Go Back</a>
        </div>

    </div>
</div>



