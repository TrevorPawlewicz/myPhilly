<div class="container">
    <div class="row">
        <h1 class="h1-center">Edit <%= bar.name %></h1>

        <div class="header-width-30">
            <!--                              method-override          -->
            <form action="/bars/<%= bar._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text"
                           name="bar[name]" value="<%= bar.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"
                           name="bar[image]" value="<%= bar.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"
                           name="bar[description]" value="<%= bar.description %>">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>

            <a href="/bars">Go Back</a>
        </div>

    </div>
</div>



