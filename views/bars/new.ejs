<div id="bars-new" class="container">
    <div class="row">
        <h1 class="h1-center">Create a New Bar</h1>

        <div class="header-width-30">
            <form action="/bars" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                    <!-- <input class="form-control" type="file" name="image" placeholder="image url"> -->
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>

            <a href="/bars" class="btn btn-xs btn-info">Go Back</a>
        </div>

    </div>
</div>



