<!-- header text -->
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h2>myPhilly Bars!</h2>
            <p>View my favorite philly bars</p>
            <p>
                <a href="/bars/new" class="btn btn-primary btn-large">Add New Bar</a>
            </p>
        </div>
