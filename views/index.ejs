<h1>bars.ejs</h1>

<a href="/bars/new">Add new Bar</a>

<!-- image thumnails -->
<div class="row text-center" style="display:flex; flex-wrap:wrap;">

    <% bars.forEach(function(bar){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= bar.image %>">
                <div class="caption">
                    <h4><%= bar.name %></h4>
                </div>
                <p>
                    <a href="/bars/<%= bar._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <% }); %>

</div>






